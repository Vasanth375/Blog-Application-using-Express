<%- include('header') -%>
    <!-- Page Header-->
    <header
      class="masthead"
      style="background-image: url('../assets/img/home-bg.jpg')"
    >
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="site-heading">
              <h1>BlogSphere</h1>
              <span class="subheading">Boundless Knowledge</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main Content-->
    <div class="container mt-5">
      <h1>Edit Blog</h1>
      <form method="POST" action="/dashboard/update-blog?id=<%= blog.id %>" enctype="multipart/form-data">
        <div class="form-group">
            <p class="mt-2">Current Image:</p>
            <img src="/uploads/<%= blog.img.data %>" height="500px" width="1000px" class="img-thumbnail" alt="Current Image">
            <br>
            <label for="image">Upload new Image</label>
            <input type="file" class="form-control-file" id="image" name="myImage">
          </div>
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" name="blogName" value="<%= blog.blogName %>">
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          <textarea class="form-control" id="content" name="description" rows="4"><%= blog.description %></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Update Blog</button>
      </form>
    </div>
<%- include('footer') -%>